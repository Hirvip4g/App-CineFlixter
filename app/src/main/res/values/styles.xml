<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Strario" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#0a0a0a</item>
        <item name="android:colorPrimary">#000</item>
        <item name="android:colorPrimaryDark">#000</item>
        <item name="android:colorAccent">#000</item>
    </style>

    <style name="Theme.Strario.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#1a1a1a</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:colorAccent">#000</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowTitleStyle">@style/DialogTitleText</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

